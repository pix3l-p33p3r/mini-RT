NAME = miniRT

CC = cc

CFLAGS = -Wall -Wextra -Werror -Ofast

SRC = miniRT.c\
	  libft.c\
	  check_elements.c\
	  check_objects.c\
	  rt_utils.c\
	  rt_utils1.c\
	  ./get_next_line/get_next_line.c\
	  ./get_next_line/get_next_line_utils.c\

UNAME = $(shell uname)

ifeq ($(UNAME), Linux)
	MLX_FLAGS = -Lmlx_linux -lmlx_Linux -L/usr/lib -Imlx_linux -lXext -lX11 -lm -lz
else ifeq ($(UNAME), Darwin)
	MLX_FLAGS = -Lmlx -lmlx -framework OpenGL -framework AppKit
endif

OBJ = $(SRC:.c=.o)


all : $(NAME)
$(NAME) : $(OBJ)
	make -C ./libft
	$(CC) $(CFLAGS) $(OBJ) ./libft/libft.a $(MLX_FLAGS)  $(NAME)

clean :
	make clean -C ./libft
	rm -rf $(OBJ)

fclean : clean
	make fclean -C ./libft
	rm -rf $(NAME)

re : fclean all

.PHONY: all clean fclean